<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KHBPA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="height: 50px;">

        <div>

            <div class="navbar-header">
                
                <a style="padding-left:60px; padding-right:50px;"><img src="~/Content/Images/khbpalogo.png" style="height:50px; " /></a>
                <button type="button" class="navbar-toggle"  data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" style="font-size:20px;">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Donate", "Index", "Donor")</li>
                    <li>@Html.ActionLink("Events", "Events", "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("History", "History", "Home")</li>
                    <li>@Html.ActionLink("News", "News", "Home")</li>
                    <li>@Html.ActionLink("Documents", "Documents", "Home")</li>
                    <li>@Html.ActionLink("Race Info", "RaceInfo", "Home")</li>



                </ul>
                              
                <div style="padding-right:25px;">@Html.Partial("_LoginPartial")</div>
                

            </div>
        </div>
    </div>



    <div style="text-align:center">
        @RenderBody()
        <hr />
        
    </div>
    <footer style="text-align: center">
        <h3>Contact</h3>
        <a target="_blank" href="https://goo.gl/maps/xBqGKXK2fju">
            <address>
                Kentucky HBPA<br />
                3729 S. Fourth St.<br />
                Louisville, KY 40214-1712
            </address>
        </a>
                <table>
            <tbody>
                <tr>
                    <!--TR: Table Row Open Tag-->
                    <td>Email</td>
                    <td><a href="mailto:Kentuckyhbpa@gmail.com">Kentuckyhbpa@gmail.com</a></td> <!--TD: Table Cell -->
                </tr><!--Close Tag-->
                <tr>
                    <!--New Row-->
                    <td>Phone</td>
                    <td>
                        <a href="tel:+15023631077">502-363-1077</a>
                    </td>
                </tr>
                <tr>
                    <td>Toll-Free</td>
                    <td>
                        <a href="tel:+18009284272">800-928-4272</a><!--a = anchor or "link"-->
                    </td>

                </tr>
                <tr>
                    <td>Fax</td>
                    <td>
                        <a href="tel:+15023676800">502-367-6800</a>
                    </td>
                </tr>
            </tbody>
        </table>
        <p>This office is open year-round, Monday - Friday from 8:30am to 4:00pm</p>



        <p>&copy; @DateTime.Now.Year - KHBPA</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--CTRL+K+D atuto styles indentation and code styling-->

</body>
</html>
