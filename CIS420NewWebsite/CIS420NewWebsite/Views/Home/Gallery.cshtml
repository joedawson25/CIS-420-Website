
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<CIS420NewWebsite.Models.PhotoGallery>
@{ ViewBag.Title = "Gallery"; }

<script src="~/Scripts/_photos.js"></script>
<link href="~/Content/photos.css" rel="stylesheet" />
<div class="row">
    <div class="text-center">
    </div>
</div>
<div class="row-fluid col-lg-12">
    <div class="span2">
        <div>
            @foreach (var image in Model)
            {
                <div class="photo-div">
                    <img alt="@image.Description" src="@Url.Content(@image.Path)" class="photo" onclick="display(this);" />
                </div>}
        </div>
    </div>
</div>
<div id="divimage" class="modal">
    <img class="modal-content" id="modalimg">
    <div id="caption"></div>
</div>