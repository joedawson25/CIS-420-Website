@{
    ViewBag.Title = "Home Page";
}
<div>
    <div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top:0; border:0;">
        <ol class="carousel-indicators">
            <li data-target="mycarousel" data-slide-to="0"></li>
            <li data-target="mycarousel" data-slide-to="1"></li>
            <li data-target="mycarousel" data-slide-to="2"></li>
            <li data-target="mycarousel" data-slide-to="3"></li>
            <li data-target="mycarousel" data-slide-to="4"></li>
            <li data-target="mycarousel" data-slide-to="5"></li>
        </ol>
        <div class="carousel-inner" role="listbox" style="height:400px">
            <div class="item active">
                <img src="~/Content/Images/Kentucky Derby 2.jpg" style="background-image:inherit" />

            </div>
            <div class="item">
                <img src="~/Content/Images/kentuckyderby-hero7.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/horse_racing-17.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/preakness.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/preakness2.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/preaknessPostRace.jpg" style="background-image:inherit" />
            </div>

        </div>
        <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>


<div class="col-lg-12">
    <div class="panel-body">
        <h1>Kentucky Horsemen’s Benevolent and Protective Association</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4" style="padding-right:5px; padding-left:5px">
        <div class="panel-body" style="border:1px solid; border-color:#CFB53B">
            <h3>Learn more about the KYHBPA</h3>
            <p>
                Learn about our history and discover what we do for the Kentucky racing community!
            </p>
            <p><a class="btn btn-default" href="~/Home/About">Learn more &raquo;</a></p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel-body" style="border:1px solid #CFB53B;">

            <h3>Become a Member</h3>
            <p>Sign up for a membership to join the KHBPA community and start receiving benefits!</p>
            <p><a class="btn btn-default" href="~/Account/Register">Sign Up &raquo;</a></p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel-body" style="border:1px solid #CFB53B;">

            <h3>Newsletters</h3>
            <p>Sign Up for a Newsletter and keep up with all things racing, locally and nationally!</p>
            <p><a class="btn btn-default" href="~/Home/News">Subscribe &raquo;</a></p>
        </div>
    </div>

<div class="col-md-4" style="margin-bottom:35px; margin-top:75px;">
    <a class="twitter-timeline"
       href="https://twitter.com/KyHBPA?ref_src=twsrc%5Etfw"
       data-width="300"
       data-height="500">
        Tweets by KyHbpa
    </a>
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</div>
</div>
