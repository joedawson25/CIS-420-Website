@{
    ViewBag.Title = "Home Page";
}

<div>
    <div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top:0; border:0;">
        <ol class="carousel-indicators">
            <li data-target="mycarousel" data-slide-to="0"></li>
            <li data-target="mycarousel" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner" role="listbox" style="height:400px">
            <div class="item active">
                <img src="~/Content/Images/Kentucky Derby 2.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/kentuckyderby-hero7.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/horse_racing-17.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/AP_440029536994.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/home_4.jpg" style="background-image:inherit" />
            </div>
            <div class="item">
                <img src="~/Content/Images/Horse-racing-in-Bac-Ha-p2.jpg" style="background-image:inherit" />
            </div>
            
        </div>

        <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



</div>
<div style="width:100%">
    <div class="col-lg-12">
        <h1>Welcome to the Kentucky Horsemen’s Benevolent and Protective Association</h1>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h3>Learn more about the KYHBPA</h3>
            <p>
                Learn about our history and discover what we do for the Kentucky racing community!
            </p>
            <p><a class="btn btn-default" href="~/Home/About">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h3>Become a Member</h3>
            <p>Sign up for a membership to join the KHBPA community and start receiving benefits!</p>
            <p><a class="btn btn-default" href="~/Account/Register">Sign Up &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h3>Newsletters</h3>
            <p>Sign Up for a Newsletter and keep up with all things racing!</p>
            <p><a class="btn btn-default" href="~/Home/News">Subscribe &raquo;</a></p>
        </div>
    </div>
</div>